# {{ template_destpath }}
# vim: set ft=samba
# {{ ansible_managed }}

# Global parameters
[global]
    bind interfaces only = {{ samba_bind_interfaces_only | ternary('yes', 'no') }}
    dedicated keytab file = {{ samba_keytab_file }}
    dns forwarder = {{ samba_ad.dns_forwarder }}
    idmap_ldb:use rfc2307 = {{ samba_use_rfc2307 | ternary('yes', 'no') }}
    kerberos method = {{ samba_kerberos_method }}
    netbios name = {{ ansible_hostname }}
    realm = {{ samba_realm | upper }}
    server role = {{ samba_role }}
    workgroup = {{ samba_workgroup | upper }}

# Netlogon share
[netlogon]
    path = /var/lib/samba/sysvol/{{ samba_realm | lower }}/scripts
    read only = No

# Sysvol share
[sysvol]
    path = /var/lib/samba/sysvol
    read only = No
